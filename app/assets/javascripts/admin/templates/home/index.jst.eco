<script>
  $('.integration-toggle').toggles({
    text: {
      on: 'Enabled', // text for the ON position
      off: 'Disabled' // and off
    },
    on: true,
    width: 90
  });

  $('.integration-toggle').on('toggle', function (e, active) {
    if (active) {
      $(this).parent().removeClass('disabled').addClass('enabled');
    } else {
      $(this).parent().removeClass('enabled').addClass('disabled');
    }
  });

  $('#integrations-list').find('.actions a').powerTip({
    popupId: 'integration-tooltip'
  });
</script>

