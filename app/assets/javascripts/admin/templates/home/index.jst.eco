<%#---------------------------------------%>
<%#  Connecion Details                    %>
<%#---------------------------------------%>
<fieldset class="no-border-bottom" id="connection-details">
  <legend>Connection Details</legend>

  <div class="row">
    <%#---------------------------------------%>
    <%#  Connected Message                    %>
    <%#---------------------------------------%>
    <div id="connected-message">

      <%# Link -> Connected Icon %>
      <span class="icon-stack">
        <i class="icon-circle icon-stack-base"></i>
        <i class="icon-link icon-light"></i>
      </span>

      <%# Connected Message %>
      Connected to the <strong><%= @env['environment'] %></strong> Integrator as <strong><%= @env['user'] %></strong>.

    </div>
    <%# / Connected Message%>

    <%#---------------------------------------%>
    <%#  Connection Actions                   %>
    <%#---------------------------------------%>
    <div id="connection-actions" class='filter-actions actions'>

      <%# Edit Connection %>
      <a href="#" class="button">
        <i class="icon-edit"></i>
        Edit Connection
      </a>

      <%# Or Splitter %>
      <span class="or">or</span>

      <%# Close Connection %>
      <a href="#" class="button">
        <i class="icon-unlink"></i>
        Close Connection
      </a>

    </div>
    <%# / Connection Actions %>
  </div>

</fieldset>
<%# / Connection Details %>

