<%= render partial: 'spree/admin/shared/integration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:endpoint_testing) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_message), new_object_url, :icon => 'icon-plus', :id => 'admin_new_endpoint_messages_link' %>
  </li>
<% end %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<fieldset>
  <legend><%= Spree.t(:filter_results) %></legend>

  <div data-hook="admin_orders_index_search">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="alpha six columns">
        <div class="field">
          <%= label_tag nil, Spree.t(:message) %>
          <%= f.select :message_eq, Spree::EndpointMessage.unique_messages, {include_blank: true}, class: 'select2' %>
        </div>
        </div>
      <div class="six columns omega">
        <div class="field">
          <%= label_tag nil, Spree.t(:uri) %>
          <%= f.text_field :uri_cont, :class => 'fullwidth' %>
        </div>
      </div>

      <div class="clearfix"></div>

      <div class="actions filter-actions">
        <div data-hook="admin_orders_index_search_buttons">
          <%= button Spree.t(:filter_results), 'icon-search' %>
        </div>
      </div>
    <% end %>
  </div>

</fieldset>

<%= paginate @endpoint_messages %>

<% if @endpoint_messages.any? %>
  <table class="index" id='listing_endpoint_messages'>
    <colgroup>
      <col style="width: 40%" />
      <col style="width: 30%" />
      <col style="width: 15%" />
      <col style="width: 15%" />
    </colgroup>
    <thead>
      <tr data-hook="admin_endpoint_messages_index_headers">
        <th><%= Spree.t(:uri) %></th>
        <th><%= Spree.t(:created_at) %></th>
        <th><%= Spree.t(:response_code) %></th>
        <th data-hook="admin_endpoint_messages_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @endpoint_messages.each do |message|%>
        <tr id="<%= spree_dom_id message %>" data-hook="admin_endpoint_messages_index_rows" class="<%= cycle('odd', 'even')%>">
          <td class="align-center"><%= message.uri %></td>
          <td class="align-center"><%= message.created_at %></td>
          <td class="align-center"><%= message.response_code %></td>
          <td data-hook="admin_endpoint_messages_index_row_actions" class="actions">
            <%= link_to_edit message,  no_text: true %>
            <%= link_to_clone message, no_text: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found"><%= Spree.t(:no_endpoint_messages_found) %></div>
<% end %>

<%= paginate @endpoint_messages %>

